<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetailsActivity">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="55dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/movie_title_size_land"
            android:background="@color/colorTitleLayout"
            android:padding="@dimen/padding"
            app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:id="@+id/img_poster"
                android:layout_width="175dp"
                android:layout_height="250dp"
                app:layout_constraintTop_toBottomOf="@id/title_tv"
                app:layout_constraintLeft_toLeftOf="parent"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                tools:src="@drawable/ic_launcher_background"/>
                <TextView
                    android:id="@+id/release_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:paddingTop="@dimen/padding"
                    app:layout_constraintLeft_toRightOf="@id/img_poster"
                    app:layout_constraintTop_toBottomOf="@id/title_tv"
                    tools:text="2019"/>
        <ImageView
            android:id="@+id/favorite_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/non_favorite_24dp"
            android:paddingTop="@dimen/padding"
            android:paddingLeft="@dimen/padding"
            app:layout_constraintLeft_toRightOf="@id/release_date_tv"
            app:layout_constraintTop_toTopOf="@id/release_date_tv"/>
                <TextView
                    android:id="@+id/average_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:paddingTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/release_date_tv"
                    app:layout_constraintLeft_toRightOf="@id/img_poster"
                    tools:text="3.5"/>
        <Button
            android:id="@+id/favorite_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin32"
            android:background="@color/colorTitleLayout"
            android:textColor="@color/white"
            android:text="@string/not_favorite"
            app:layout_constraintLeft_toRightOf="@id/img_poster"
            app:layout_constraintTop_toBottomOf="@id/average_tv"/>
        <TextView
            android:id="@+id/overview_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/plot_label"
            android:textSize="@dimen/overview_title_size"
            android:paddingTop="@dimen/padding"
            android:paddingLeft="@dimen/padding"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/favorite_iv"
            app:layout_constraintLeft_toRightOf="@id/favorite_button"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            tools:text="asdfasdfsadfasdf"
            android:id="@+id/summary_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding"
            app:layout_constraintTop_toBottomOf="@id/overview_title_tv"
            app:layout_constraintLeft_toRightOf="@id/favorite_button"
            app:layout_constraintRight_toRightOf="parent"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTitleLayout"
            app:tabTextColor="@color/white"
            android:layout_marginTop="@dimen/padding"
            app:layout_constraintTop_toBottomOf="@id/img_poster"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:layout_constraintTop_toBottomOf="@id/tab_layout">


        </android.support.v4.view.ViewPager>
    </android.support.constraint.ConstraintLayout>
</ScrollView>